# ============================================================
# TRADEFORK v4.2 — Environment Variables
# Copy this file to .env and fill in your actual values.
# ============================================================

# --- Telegram Bot ---
TELEGRAM_BOT_TOKEN=           # BotFather token (e.g. 123456:ABC-DEF...)

# --- Anthropic (LLM) ---
ANTHROPIC_API_KEY=            # Anthropic API key (sk-ant-...)

# --- Pinecone (Vector DB) ---
PINECONE_API_KEY=             # Pinecone API key
PINECONE_INDEX_NAME=tradefork-episodes  # Index name (dim=1024, cosine)

# --- Encryption ---
ENCRYPTION_KEY=               # Fernet.generate_key() — for AES-256 exchange key encryption

# --- External Data APIs ---
TAVILY_API_KEY=               # Tavily search API key
CMC_API_KEY=                  # CoinMarketCap API key
CRYPTOPANIC_API_KEY=          # CryptoPanic API key

# --- Server Static IP (Railway Static IP) ---
STATIC_IP=                    # Railway Settings → Networking → Static IP

# --- Exchange (dev/test) ---
BINANCE_API_KEY=              # Binance API key (read-only!)
BINANCE_API_SECRET=           # Binance API secret

# --- Database ---
DATABASE_URL=                 # PostgreSQL (e.g. postgresql://user:pass@host:5432/db)
REDIS_URL=                    # Redis (e.g. redis://host:6379)
